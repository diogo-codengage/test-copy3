        "react-app-rewired": "^2.1.1",
        "ts-loader": "^6.0.4",
        "webpack": "4.29.6"
    },
    "scripts": {
        "release-major": "yarn version --major && yarn release-major-apps && git push origin --tags",
        "release-minor": "yarn version --minor && yarn release-minor-apps && git push origin --tags",
        "release-patch": "yarn version --patch && yarn release-patch-apps && git push origin --tags",
        "release-major-apps": "yarn workspace resmed release-major && yarn workspace e-sanar release-major && yarn workspace sanarflix release-major && yarn workspace sanarrm release-major && yarn workspace @sanar/components release-major && yarn workspace sanarui release-major && && yarn workspace @sanar/utils:build release-major",
        "release-minor-apps": "yarn workspace resmed release-minor && yarn workspace e-sanar release-minor && yarn workspace sanarflix release-minor && yarn workspace sanarrm release-minor && yarn workspace @sanar/components release-minor && yarn workspace sanarui release-minor && && yarn workspace @sanar/utils:build release-minor",
        "release-patch-apps": "yarn workspace resmed release-patch && yarn workspace e-sanar release-patch && yarn workspace sanarflix release-patch && yarn workspace sanarrm release-patch && yarn workspace @sanar/components release-patch && yarn workspace sanarui release-patch && && yarn workspace @sanar/utils:build release-patch",
        "commit": "git-cz",
        "sanarui:build": "yarn workspace sanar-ui build",
        "sanarui:cli": "yarn workspace sanar-ui cli",
        "sanarui:dev": "yarn workspace sanar-ui dev",
        "sanarui:storybook": "yarn workspace sanar-ui storybook",
        "sanarui:storybook:build": "yarn workspace sanar-ui storybook:build",
        "sanarui:test": "yarn workspace sanar-ui test",
        "esanar:start": "yarn workspace e-sanar start",
        "esanar:build:development": "yarn workspace e-sanar build:development",
        "esanar:build:staging": "yarn workspace e-sanar build:staging",
        "esanar:build:production": "yarn workspace e-sanar build:production",
        "esanar:start:dev": "npm-run-all --parallel sanarui:dev esanar:start",
        "sanarrm:build": "yarn workspace sanar-rm-questions build",
        "sanarrm:start": "yarn workspace sanar-rm-questions start",
        "sanarrm:lint": "yarn workspace sanar-rm-questions lint",
        "sanarrm:start:dev": "npm-run-all --parallel sanarui:dev sanarui:storybook sanarrm:start",
        "sanarflix:start": "yarn workspace sanarflix start",
        "sanarflix:build:development": "yarn workspace sanarflix build:development",
        "sanarflix:build:staging": "yarn workspace sanarflix build:staging",
        "sanarflix:build:production": "yarn workspace sanarflix build:production",
        "sanarflix:start:dev": "npm-run-all --parallel sanarui:dev sanarflix:start",
        "test": "yarn && yarn sanarui:build && yarn esanar:build:development && yarn sanarflix:build:development && yarn sanarrm:build",
        "@sanar/components:build": "yarn workspace @sanar/components build",
        "@sanar/components:start:dev": "yarn workspace @sanar/components start:dev",
        "@sanar/components:start:dev:storybook": "yarn workspace @sanar/components start:dev:storybook",
        "@sanar/utils:build": "yarn workspace @sanar/utils build",
        "resmed:start": "yarn workspace resmed start",
        "resmed:build:development": "yarn workspace resmed build:development",
        "resmed:build:staging": "yarn workspace resmed build:staging",
        "resmed:build:production": "yarn workspace resmed build:production"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
