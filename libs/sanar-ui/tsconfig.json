{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
//    "allowJs": true,
    "isolatedModules": false,
    "noEmit": false,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ]
}
